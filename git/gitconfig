[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[core]
    whitespace = space-before-tab,trailing-space
    editor = /usr/bin/vim

[diff]
    algorithm = patience

[color]
    # Use colors in Git commands that are capable of colored output when outputting to the terminal
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    llsffrag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = simple
